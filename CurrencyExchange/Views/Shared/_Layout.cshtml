<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CurrencyExchange</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/inline.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    @using Microsoft.AspNetCore.Http;
    @model CurrencyExchange.Models.Conversion
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Currency Exchange</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ExchangeRate">Exchange Rate</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ConvertMoney">Convert Money</a>
                        </li>
                        @if (Context.Session.GetString("sessionUser") == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Register">Register</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Notifications" asp-action="Index" asp-route-id="@Context.Session.GetString("sessionUser")">My Notifications</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Details" asp-route-id="@Context.Session.GetString("sessionUser")">My Profile</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Logout">Logout</a>
                            </li>
                        }
                        @if (Context.Session.GetString("sessionUserRole") == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Index">Users</a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    @*sidenav*@
    <div id="mySidenav" class="sidenav">

        @*exchangerate*@
        <label>Exchange rate</label>
        <div class="text-center">
            @if (ViewData["Response"] != null)
            {
                <p>
                    @ViewData["Response"]
                </p>
            }
            <form asp-action="ExchangeRate" method="post">
                @*<p>
                    <label>Start Date</label>
                    <input asp-for="StartDate" value="2020.06.01"/>
                </p>
                <p>
                    <label>End Date</label>
                    <input asp-for="EndDate" value="2020.07.01"/>
                </p>*@
                <p>
                    <label>Base Currency</label>
                    <select asp-for="BaseCurrency">
                        @foreach (var value in @ViewBag.Currencies)
                        {
                            <option value="@value">@value</option>
                        }
                    </select>
                </p>
                <p>
                    <label>End Currency</label>
                    <select asp-for="EndCurrency">
                        @foreach (var value in @ViewBag.Currencies)
                        {
                            <option value="@value">@value</option>
                        }
                    </select>
                </p>
                <input type="submit" value="send" />
            </form>
        </div>

        @*convert money*@

        <a href="#">About</a>
        <a href="#">Services</a>
        <a href="#">Clients</a>
        <a href="#">Contact</a>
    </div>




    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - CurrencyExchange - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
